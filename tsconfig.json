{
  "compilerOptions": {
    "target": "esnext",
    "module": "Node16",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "Node16",
    "baseUrl": "./src",
    "paths": {
      "@hooks/*": ["hooks/*"],
      "@providers/*": ["providers/*"],
      "@components/*": ["components/*"],
      "@lib/*": ["lib/*"],
      "@theme": ["theme"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
